{
	"name": "@antikythera/antikythera",
	"version": "1.2.0",
	"type": "module",
	"module": "./dist/antikythera.js",
	"main": "./dist/antikythera.cjs",
	"exports": {
		".": {
			"import": "./dist/antikythera.js",
			"require": "./dist/antikythera.umd.cjs"
		},
		"./fonts": {
			"import": "./dist/css/fonts.css",
			"require": "./dist/css/fonts.css"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"env": "dotenv -e ../.env",
		"dev": "npm run env -- vite",
		"build": "npm run env -- vite build",
		"preview": "npm run env -- vite preview"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.20",
		"postcss": "^8.4.45",
		"tailwindcss": "^3.4.17",
		"vite": "^5.4.1"
	},
	"dependencies": {
		"@portabletext/vue": "^1.0.11",
		"@vitejs/plugin-vue": "^5.1.3",
		"dotenv-cli": "^7.4.2",
		"vue": "^3.5.3",
		"vue-router": "^4.5.0"
	},
	"prettier": {
		"semi": false,
		"printWidth": 160,
		"bracketSpacing": true,
		"singleQuote": true,
		"tabWidth": 4,
		"useTabs": true,
		"trailingComma": "none"
	}
}
